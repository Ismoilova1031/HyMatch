{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "screens/**/*.ts",
    "screens/**/*.tsx",
    "data/**/*.ts",
    "data/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "context/**/*.ts",
    "context/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.tsx",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    "i18n.ts",
    "svg.d.ts",
    "@types/**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**"
  ]
}
